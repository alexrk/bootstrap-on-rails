.navbar.navbar-inverse.navbar-fixed-top
  .navbar-inner
    .container
      = link_to_void :class => "btn btn-navbar", :data => { :target => ".nav-collapse", :toggle => "collapse" } do
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar

      = link_to "BootstrapOnRails", root_path, :class => "brand"

      .nav-collapse.collapse
        - unless user_signed_in?
          .navbar-form.pull-right
            = link_to "Sign in", new_user_session_path, :class => "btn btn-primary"
            = link_to "Sign up", new_user_registration_path, :class => "btn btn-inverse"

        %ul.nav.pull-right
          %li.active= link_to "Home", root_path
          %li= link_to "About", "#about"
          %li= link_to "Contact", "#contact"

          - if user_signed_in?
            %li.dropdown
              = link_to "#", :class => "dropdown-toggle", :data => { :toggle => "dropdown" } do
                = current_user.username
                %b.caret

              %ul.dropdown-menu
                %li.nav-header= current_user.email
                %li= link_to "Edit Profile", edit_user_registration_path
                %li.divider
                %li= link_to "Sign out", destroy_user_session_path, :method => :delete
